    <validationRules>
        <fullName>Active_Customer_Address_Is_Primary</fullName>
        <active>true</active>
        <description>Prevents CSC users from making non active customer addresses primary</description>
        <errorConditionFormula>AND( 
OR($Profile.Name = &quot;CSC Advocate&quot; , $Profile.Name = &quot;Gallery&quot;), 

AND( Is_Inactive__c = TRUE,  Is_Principal_Address__c  = TRUE) 
)</errorConditionFormula>
        <errorMessage>You cannot mark a primary address as inactive. Choose or create a different primary address before marking this address as inactive.</errorMessage>
