<apex:page standardController="Issue__c" extensions="Issue_InventoryCtrlExt">
    <apex:form >
    	
    	<apex:outputField value="{!Issue__c.CW_SKU_ID__c}" rendered="false"/>      
        
        <apex:pageBlock mode="detail" >
            <apex:pageBlockSection columns="1">
                <apex:pageBlockTable value="{!InventoryInfoList}" var="inventoryInfo">
                    <apex:column headerValue="Warehouse" value="{!inventoryInfo.locationId}"/>
                    <apex:column headerValue="On Hand" value="{!inventoryInfo.skuQty}"/>
                    <apex:column headerValue="Next On Order" value="{!inventoryInfo.nextExpectedQty }"/>
                    <apex:column headerValue="Next PO Date" value="{!inventoryInfo.skuNxtOrderDate}"/>
                </apex:pageBlockTable> 
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>