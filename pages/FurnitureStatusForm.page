<apex:page standardController="Gallery_Furniture__c" extensions="GalleryFurnitureCtlExt" tabStyle="Gallery_Furniture__c" action="{!initFurnitureStatusForm}" renderAs="PDF">
		
	<apex:pageMessages />
	<apex:outputPanel rendered="{!!fatalError}">
	<html>
		<head>
			<title>Furniture Status Form</title>
		</head>
	
		<body link="#666" vlink="#666" alink="#666">
		
			<table width="800" style="margin: 0 auto; width:700px; font-family:'Times New Roman',Times,serif; font-size:12px; line-height:18px" cellpadding="0" cellspacing="0">
				<tbody>
					<tr>
						<td style="text-align: center; padding: 0 0 30px 0;"><a style="color:#000" href="{!rhBrand.Brand_Home_Page_URL__c}" target="_blank"><img src="{!rhBrand.Brand_Logo_URL__c}" width="{!rhBrand.Brand_Logo_Width__c}" height="{!rhBrand.Brand_Logo_Height__c}"/></a></td>
					</tr>
					
					<tr>
						<td style="font-family: 'open-sans', 'Helvetica', 'Arial' sans-serif; background-color: #a6a6a6; text-transform: uppercase; padding:10px 0; text-align:center; font-size:20px">FURNITURE STATUS FORM</td>
					</tr>
				</tbody>
			</table>
			
			<table width="800" style="margin: 0 auto; width:700px; font-family:'open-sans', 'Helvetica', 'Arial' sans-serif; font-size:12px; line-height:18px" cellpadding="0" cellspacing="0">
				<tbody>
					<tr>
						<td valign="top" style="width:400px; padding: 15px 0 0 10px"><img height="328" width="336" src="{!productImageURL}" alt="" title=""/></td>
						<td valign="top" style="width:300px; padding: 15px 0 0 10px">
							
							<table width="280" style="margin: 0 auto; width:280px; font-family:'open-sans', 'Helvetica', 'Arial' sans-serif; font-size:12px; line-height:15px" cellpadding="0" cellspacing="0">
								<tbody>
									<tr>
										<td valign="top" style="width:80px; padding: 15px 0 0 10px; font-weight: bold;">
											Sold
										</td>
										<td valign="top" style="width:200px; padding: 15px 0 0 10px">
											<apex:outputField value="{!rhFurniture.Sold__c}"/>
										</td>
									</tr>
									<tr>
										<td valign="top" style="width:80px; padding: 5px 0 0 10px; font-weight: bold;">
											STS #
										</td>
										<td valign="top" style="width:200px; padding: 5px 0 0 10px">
											<apex:outputField value="{!rhFurniture.Product__r.STSSku__c}"/>
										</td>
									</tr>
									<tr>
										<td valign="top" style="width:80px; padding: 5px 0 0 10px; font-weight: bold;">
											Description
										</td>
										<td valign="top" style="width:200px; padding: 5px 0 0 10px">
											{!productDescription}
										</td>
									</tr>
									<tr>
										<td valign="top" style="width:80px; padding: 5px 0 0 10px; font-weight: bold;">
											UPC
										</td>
										<td valign="top" style="width:200px; padding: 5px 0 0 10px">
											<GMBLBC:barcode value="{!productCode}" type="upca" rendered="{!validUPC}"/>
											<apex:outputText value="UPC number not available" rendered="{!!validUPC}"/>
										</td>
									</tr>
								</tbody>
							</table>
						</td>
					</tr>
				</tbody>
			</table>
			
			<table width="800" style="margin: 0 auto; width: 700px; font-family:'open-sans', 'Helvetica', 'Arial' sans-serif; font-size:12px; line-height:15px" cellpadding="0" cellspacing="0">
				<colgroup>
					<col width="15%"/>
					<col width="25%"/>
					<col width="5%"/>
					<col width="5%"/>
					<col width="15%"/>
					<col width="35%"/>
				</colgroup>
				<tbody>
					<tr>
						<td valign="top" style="text-align:left; padding: 30px 0 0 0; font-weight: bold;" colspan="6">
							GALLERY INFORMATION
						</td>
					</tr>
					<tr>
						<td valign="top" style="padding: 15px 0 0 10px; font-weight: bold;">
							Gallery #
						</td>
						<td valign="top" style="padding: 15px 0 0 10px; border-bottom: solid;">
							<apex:outputField value="{!rhFurniture.Gallery_Account__r.Gallery__c}"/>
						</td>
						<td valign="top" style="padding: 15px 0 0 10px;">
							
						</td>
						<td valign="top" style="padding: 15px 0 0 10px;">
							
						</td>
						<td valign="top" style="padding: 15px 0 0 10px; font-weight: bold;">
							Gallery Name
						</td>
						<td valign="top" style="padding: 15px 0 0 10px; border-bottom: solid;">
							<apex:outputField value="{!rhFurniture.Gallery_Account__r.Name}"/>
						</td>
					</tr>
					<tr>
						<td valign="top" style="padding: 10px 0 0 10px; font-weight: bold;">
							Sold Date
						</td>
						<td valign="top" style="padding: 10px 0 0 10px; border-bottom: solid;">
							<apex:outputField value="{!rhFurniture.Sold_Date__c}"/>
						</td>
						<td valign="top" style="padding: 10px 0 0 10px;">
							
						</td>
						<td valign="top" style="padding: 10px 0 0 10px;">
							
						</td>
						<td valign="top" style="padding: 10px 0 0 10px; font-weight: bold;">
							Associate Name
						</td>
						<td valign="top" style="padding: 10px 0 0 10px; border-bottom: solid;">
							<apex:outputField value="{!rhFurniture.Gallery_Associate__r.Name}"/>
						</td>
					</tr>
					<tr>
						<td valign="top" style="padding: 10px 0 0 10px; font-weight: bold;">
							Register #
						</td>
						<td valign="top" style="padding: 10px 0 0 10px; border-bottom: solid;">
							<apex:outputField value="{!rhFurniture.Register__c}"/>
						</td>
						<td valign="top" style="padding: 10px 0 0 10px;">
							
						</td>
						<td valign="top" style="padding: 10px 0 0 10px;">
							
						</td>
						<td valign="top" style="padding: 10px 0 0 10px; font-weight: bold;">
							Transaction #
						</td>
						<td valign="top" style="padding: 10px 0 0 10px; border-bottom: solid;">
							<apex:outputField value="{!rhFurniture.Transaction__c}"/>
						</td>
					</tr>
					<tr>
						<td valign="top" style="padding: 10px 0 0 10px; font-weight: bold;">
							HDL Checklist #
						</td>
						<td valign="top" style="padding: 10px 0 0 10px; border-bottom: solid;">
							<apex:outputField value="{!rhFurniture.HDL_Checklist__c}"/>
						</td>
						<td valign="top" style="padding: 10px 0 0 10px;">
							
						</td>
						<td valign="top" style="padding: 10px 0 0 10px;">
							
						</td>
						<td valign="top" style="padding: 10px 0 0 10px; font-weight: bold;">
						</td>
						<td valign="top" style="padding: 10px 0 0 10px">
						</td>
					</tr>
				</tbody>
			</table>
			
			<table width="800" style="margin: 0 auto; width:700px; font-family:'open-sans', 'Helvetica', 'Arial' sans-serif; font-size:12px; line-height:15px" cellpadding="0" cellspacing="0">
				<colgroup>
					<col width="9%"/>
					<col width="30%"/>
					<col width="6%"/>
					<col width="5%"/>
					<col width="12%"/>
					<col width="38%"/>
				</colgroup>
				<tbody>
					<tr>
						<td valign="top" style="text-align:left; padding: 30px 0 0 0; font-weight: bold;" colspan="6">
							CLIENT INFORMATION (IF SOLD)
						</td>
					</tr>
					<tr>
						<td valign="top" style="padding: 15px 0 0 10px; font-weight: bold;">
							Name
						</td>
						<td valign="top" style="padding: 15px 0 0 10px; border-bottom: solid;" colspan="5">
							{!clientName}
						</td>
					</tr>
					<tr>
						<td valign="top" style="padding: 10px 0 0 10px; font-weight: bold;">
							Address
						</td>
						<td valign="top" style="padding: 10px 0 0 10px; border-bottom: solid;" colspan="5">
							{!clientStreetAddress}
						</td>
					</tr>
					<tr>
						<td valign="top" style="padding: 10px 0 0 10px; font-weight: bold;">
							City
						</td>
						<td valign="top" style="padding: 10px 0 0 10px; border-bottom: solid;" colspan="5">
							<apex:outputField value="{!rhFurniture.Sold_To_City__c}"/>
						</td>
					</tr>
					<tr>
						<td valign="top" style="padding: 10px 0 0 10px; font-weight: bold;">
							State
						</td>
						<td valign="top" style="padding: 10px 0 0 10px; border-bottom: solid;">
							<apex:outputField value="{!rhFurniture.Sold_To_State_Province__c}"/>
						</td>
						<td valign="top" style="padding: 10px 0 0 10px" colspan="2">
						</td>
						<td valign="top" style="padding: 10px 0 0 10px; font-weight: bold;">
							Postal Code
						</td>
						<td valign="top" style="padding: 10px 0 0 10px; border-bottom: solid;">
							<apex:outputField value="{!rhFurniture.Sold_To_Postal_Code__c}"/>
						</td>
					</tr>
					<tr>
						<td valign="top" style="padding: 10px 0 0 10px; font-weight: bold;">
							Email
						</td>
						<td valign="top" style="padding: 10px 0 0 10px; border-bottom: solid;" colspan="5">
							<apex:outputField value="{!rhFurniture.Sold_To_Email__c}"/>
						</td>
					</tr>
					<tr>
						<td valign="top" style="padding: 10px 0 0 10px; font-weight: bold;">
							Phone
						</td>
						<td valign="top" style="padding: 10px 0 0 10px; border-bottom: solid;">
							<apex:outputField value="{!rhFurniture.Sold_To_Phone__c}"/>
						</td>
						<td valign="top" style="padding: 10px 0 0 10px" colspan="2">
						</td>
						<td valign="top" style="padding: 10px 0 0 10px; font-weight: bold;">
							Alt. Phone
						</td>
						<td valign="top" style="padding: 10px 0 0 10px; border-bottom: solid;">
							<apex:outputField value="{!rhFurniture.Sold_To_Alternate_Phone__c}"/>
						</td>
					</tr>
				</tbody>
			</table>
			
			<table width="800" style="margin: 0 auto; width:700px; font-family:'open-sans', 'Helvetica', 'Arial' sans-serif; font-size:12px; line-height:15px" cellpadding="0" cellspacing="0">
				<colgroup>
					<col width="40%"/>
					<col width="6%"/>
					<col width="4%"/>
					<col width="6%"/>
					<col width="4%"/>
					<col width="40%"/>
				</colgroup>
				<tbody>
					<tr>
						<td valign="top" style="padding: 30px 0 0 0;">
						</td>
						<td valign="top" style="padding: 30px 0 0 0; border-bottom: solid; text-align:center;">
							<apex:outputField value="{!rhFurniture.Piece__c}"/>
						</td>
						<td valign="top" style="padding: 30px 0 0 0; text-align:center; font-weight: bold;">
							of
						</td>
						<td valign="top" style="padding: 30px 0 0 0; border-bottom: solid; text-align:center;">
							<apex:outputField value="{!rhFurniture.Total_Pieces__c}"/>
						</td>
						<td valign="top" style="padding: 30px 0 0 7px; text-align:center; font-weight: bold;">
							piece(s)
						</td>
						<td valign="top" style="padding: 30px 0 0 0;">
						</td>
					</tr>
				</tbody>
			</table>
		
		</body>
	</html>
	</apex:outputPanel>
</apex:page>